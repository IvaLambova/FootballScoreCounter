<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Teams' score style. -->
    <style name="TeamsScoreStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Red Cards style. -->
    <style name="RedCardsStyle" parent="AppTheme">
       <item name="android:textColor">@color/red</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textAllCaps">true</item>
    </style>

    <!-- Yellow Cards style. -->
    <style name="YellowPenaltyStyle" parent="AppTheme">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Number of red & yellow cards style. -->
    <style name="NumberCardsStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
