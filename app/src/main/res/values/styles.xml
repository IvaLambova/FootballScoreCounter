<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Parent ScrollView style -->
    <style name="ParentScrollView" parent="AppTheme">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@drawable/soccer_field</item>
    <item name="android:fillViewport">true</item>
    <item name="android:orientation">vertical</item>
    </style>

    <!-- Horizontal Linear Layout style -->
    <style name="LinearLayoutHorizontal" parent="AppTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:baselineAligned">false</item>
    <item name="android:orientation">horizontal</item>
    </style>

    <!-- Vertical Linear Layout style -->
    <style name="LinearLayoutVertical" parent="AppTheme">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- EditText view style containing team names -->
    <style name="EditText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/padding_18</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the TextView representing each team score -->
    <style name="TeamsScoreStyle" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the "Penalty" TextView text in red -->
    <style name="RedCardsStyle" parent="AppTheme">
       <item name="android:textColor">@color/red</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the "Penalty" TextView text in yellow -->
    <style name="YellowCardsStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the TextView representing each team penalty score for both red and yellow cards -->
    <style name="NumberPenaltyCardsStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>

    </style>

    <!-- Style of the Buttons representing Goal, Red and Yellow card -->
    <style name="ButtonsStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the Reset Button in portrait orientation-->
    <style name="ResetButtonStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <!-- Style of the Reset Button in landscape orientation-->
    <style name="ResetButtonLandscape" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
        <item name="android:layout_marginLeft">@dimen/margin_24</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
